<#include "../../inc/layout.html">
<@layout title="系统自定义参数" js="sso/parame/index.js">
<div class="wrapper" ms-controller="ctrl">
  <div class="mod-search cf">
    <div class="fl">
      <ul class="ul-inline" ms-if="isShow==-1">
        <li >
        <label>类别:</label>
          <select id="type"  class="ui-input" ms-duplex="query.type" ms-change="THISPAGE.reloadData()">
          	<option value="">全部</option>
          	<option ms-repeat="parameType" ms-value="$index">{{el}}</option>
          </select>
        </li>
        <li><a class="ui-btn mrb" id="search" title="查询"><i class="fa fa-search"></i></a></li>
      </ul>
    </div>
    <div class="fr">
                <div class="ctn-wrap">
                    <label for="" ms-if="showMenu('A12_1_S')">请选择要显示的公司</label>
                    <select ms-duplex="query.companyId" ms-change="reload()" class="ui-input" style="width: auto" ms-if="showMenu('A12_1_S')">
                        <option ms-repeat="companyList" ms-value="el.id">{{el.name}}</option>
                    </select>
                    <a class="ui-btn ui-btn-sp mrb" id="add" title="新增自定义参数"><i class="fa fa-plus"></i>新增</a>
                </div>


    </div>
  </div>
  <div class="grid-wrap">
    <table id="grid">
    </table>
    <div id="page"></div>
  </div>
</div>
<script>
    var parameT=${type};
</script>
</@layout>